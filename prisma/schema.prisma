generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shop {
  id           Int      @id @default(autoincrement())
  ownerUuid    String   
  name         String
  street       String
  postcode     Int
  place        String
  latitude     Float
  longitude    Float
  news         News[]
  products     Product[]
  recipes      Recipe[]
  image        String?     
  phone        Int?
  email        String?  @unique
  website      String?
  openingHours String?
  categories   Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model News {
  id        Int      @id @default(autoincrement())
  shop      Shop     @relation(fields: [shopId], references: [id])
  shopId    Int
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id        Int      @id @default(autoincrement())
  shop      Shop     @relation(fields: [shopId], references: [id])
  shopId    Int
  title     String
  content   String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Recipe {
  id         Int      @id @default(autoincrement())
  shop       Shop     @relation(fields: [shopId], references: [id])
  shopId     Int
  title      String
  content    String
  image      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
