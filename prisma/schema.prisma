generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  lastname  String
  email     String   @unique
  shops     Shop[]
  recipes   Recipe[]
  street    String?
  postcode  Int?
  place     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shop {
  id           Int      @id @default(autoincrement())
  owner        User     @relation(fields: [ownerId], references: [id])
  ownerId      Int
  name         String
  street       String
  postcode     Int
  place        String
  latitude     Float
  longitude    Float
  news         News[]
  phone        Int?
  email        String?  @unique
  website      String?
  openingHours String?
  categories   Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model News {
  id        Int      @id @default(autoincrement())
  shop      Shop     @relation(fields: [shopId], references: [id])
  shopId    Int
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Recipe {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  title      String
  content    String
  categories Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
